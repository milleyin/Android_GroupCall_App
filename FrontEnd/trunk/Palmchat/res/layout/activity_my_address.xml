<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                style="@style/SystemBarTint_Style"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">
        <include
            android:id="@id/title_layout"
            layout="@layout/head_back_title_more" />
        <ScrollView
            android:id="@+id/public_group_profile"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:background="@color/transparent"
            android:fadingEdge="none"
            android:orientation="vertical"
            android:scrollbars="none"
            android:visibility="visible"
            android:paddingLeft="18dp"
            android:paddingRight="18dp">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/offline_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="27dp"
            android:text="@string/yourshippingaddress"
            android:textSize="16sp"
            android:textColor="@color/text_level_1"/>
        <EditText
            android:id="@+id/edit_first_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/text_fouse_selector"
            android:drawablePadding="15dp"
            android:hint="@string/firstnamehint"
            android:inputType="textMultiLine"
            android:lineSpacingExtra="5dp"
            android:minHeight="42dp"
            android:scrollHorizontally="false"
            android:singleLine="false"
            android:textColorHint="@color/text_level_3"
            android:textColor="@color/text_level_1"
            android:textSize="16sp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="23dp"
             />

        <EditText
            android:id="@+id/edit_last_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/text_fouse_selector"
            android:drawablePadding="15dp"
            android:hint="@string/lastnamehint"
            android:inputType="textMultiLine"
            android:lineSpacingExtra="5dp"
            android:minHeight="42dp"
            android:scrollHorizontally="false"
            android:singleLine="false"
            android:textColorHint="@color/text_level_3"
            android:textColor="@color/text_level_1"
            android:textSize="16sp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="13dp"
            />



        <EditText
            android:id="@+id/edit_my_address"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/text_fouse_selector"
            android:drawablePadding="15dp"
            android:hint="@string/addresshint"
            android:inputType="textMultiLine"
            android:lineSpacingExtra="5dp"
            android:minHeight="42dp"
            android:textColorHint="@color/text_level_3"
            android:textColor="@color/text_level_1"
            android:textSize="16sp"
            android:scrollHorizontally="false"
            android:singleLine="false"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="13dp"
            />

        <EditText
            android:id="@+id/edit_landmark"
            android:layout_width="fill_parent"
            android:layout_height="42dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/text_fouse_selector"
            android:drawablePadding="15dp"
            android:hint="@string/landmarkhint"
            android:inputType="text"
            android:maxLength="60"
            android:textColorHint="@color/text_level_3"
            android:textColor="@color/text_level_1"
            android:textSize="16sp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="13dp"/>

<!--        <EditText
            android:id="@+id/edit_state"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/text_fouse_selector"
            android:drawablePadding="15dp"
            android:hint="@string/statehint"
            android:inputType="text"
            android:maxLength="12"
            android:textColorHint="@color/text_level_3"
            android:textColor="@color/text_level_1"
            android:textSize="16sp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="13dp"
            android:drawableLeft="@drawable/ic_login_exclamationmark" />-->

        <TextView
            android:id="@+id/edit_city"
            android:layout_width="fill_parent"
            android:layout_height="42dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/text_fouse_selector"
            android:drawablePadding="15dp"
            android:hint="@string/cityhint"
            android:inputType="text"
            android:textColorHint="@color/text_level_3"
            android:textColor="@color/text_level_1"
            android:textSize="16sp"
            android:clickable="false"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="13dp"
            android:gravity="center_vertical"/>
        <EditText
            android:id="@+id/edit_my_telephone"
            android:layout_width="fill_parent"
            android:layout_height="42dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/text_fouse_selector"
            android:drawablePadding="15dp"
            android:hint="@string/telephonehint"
            android:inputType="phone"
            android:maxLength="15"
            android:digits="0123456789"
            android:imeOptions="actionDone"
            android:textColorHint="@color/text_level_3"
            android:textColor="@color/text_level_1"
            android:textSize="16sp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="13dp"
            />
        <TextView
            android:id="@+id/edit_telephone_carrier"
            android:layout_width="fill_parent"
            android:layout_height="42dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/text_fouse_selector"
            android:drawablePadding="15dp"
            android:hint="@string/telephone_carroer_hint"
            android:inputType="text"
            android:textColorHint="@color/text_level_3"
            android:textColor="@color/text_level_1"
            android:textSize="16sp"
            android:clickable="false"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="13dp"
            android:gravity="center_vertical"/>
    </LinearLayout>
        </ScrollView>
    </LinearLayout>
</RelativeLayout>