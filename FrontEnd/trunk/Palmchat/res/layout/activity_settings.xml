<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/SystemBarTint_Style"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <!-- 标题栏 -->

    <include layout="@layout/head_back_title_more" />

    <ScrollView
        style="@style/BaseBackground"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:id="@+id/setting_main_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="12dp"
            android:paddingTop="12dp" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_list"
                android:orientation="vertical" >

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:background="@color/broadcast_trending_cccccc" />

                <!-- 通讯录备份 -->

                <RelativeLayout
                    android:id="@+id/btn_phonebook_back_up"
                    style="@style/exploreItemBg"
                    android:layout_height="48dp"
                    android:background="@drawable/filter_right_down_selector" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="18dip"
                        android:layout_marginTop="14dp"
                        android:gravity="left|center_vertical"
                        android:text="@string/phonebook_backup"
                        android:textColor="@color/color_black" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="18dip"
                        android:contentDescription="@null"
                        android:src="@drawable/navigation_forward"
                        android:visibility="visible" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:layout_marginLeft="18dp"
                    android:background="@color/predict_e6" />

                <!-- 我的账户 -->

                <RelativeLayout
                    android:id="@+id/btn_my_account"
                    style="@style/exploreItemBg"
                    android:layout_height="48dp"
                    android:background="@drawable/filter_right_down_selector" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="18dip"
                        android:text="@string/my_account"
                        android:textColor="@color/color_black" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="18dip"
                        android:contentDescription="@null"
                        android:src="@drawable/navigation_forward"
                        android:visibility="visible" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:layout_marginLeft="18dp"
                    android:background="@color/predict_e6" />

                <!-- 修改密码 -->

                <RelativeLayout
                    android:id="@+id/btn_change_password"
                    style="@style/exploreItemBg"
                    android:layout_height="48dp"
                    android:background="@drawable/filter_right_down_selector" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="18dip"
                        android:text="@string/change_password"
                        android:textColor="@color/color_black" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="18dip"
                        android:contentDescription="@null"
                        android:src="@drawable/navigation_forward"
                        android:visibility="visible" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:background="@color/broadcast_trending_cccccc" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/bg_list"
                android:orientation="vertical" >

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:background="@color/broadcast_trending_cccccc" />

                <!-- 系统消息 -->

                <RelativeLayout
                    android:id="@+id/btn_sound"
                    style="@style/exploreItemBg"
                    android:layout_height="48dp"
                    android:background="@drawable/filter_right_down_selector" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="18dip"
                        android:text="@string/notifications"
                        android:textColor="@color/color_black" />

                    <ImageView
                        android:id="@+id/img_arrow_sound"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="18dip"
                        android:contentDescription="@null"
                        android:src="@drawable/navigation_forward"
                        android:visibility="visible" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:layout_marginLeft="18dp"
                    android:background="@color/predict_e6" />

                <!-- 黑名单选项 -->

                <RelativeLayout
                    android:id="@+id/blockedlist_layout"
                    style="@style/exploreItemBg"
                    android:layout_height="48dp"
                    android:background="@drawable/filter_right_down_selector"
                    android:visibility="visible" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="18dip"
                        android:text="@string/setting_blockedlist"
                        android:textColor="@color/black" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="18dip"
                        android:src="@drawable/navigation_forward"
                        android:visibility="visible" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:background="@color/broadcast_trending_cccccc" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/bg_list"
                android:orientation="vertical" >

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:background="@color/broadcast_trending_cccccc" />

                <!-- 语言设置 -->

                <RelativeLayout
                    android:id="@+id/btn_language"
                    style="@style/exploreItemBg"
                    android:layout_height="48dp"
                    android:background="@drawable/filter_right_down_selector" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="18dip"
                        android:text="@string/language"
                        android:textColor="@color/color_black" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="18dip"
                        android:src="@drawable/navigation_forward"
                        android:visibility="visible" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:background="@color/broadcast_trending_cccccc" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/bg_list"
                android:orientation="vertical" >

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:background="@color/broadcast_trending_cccccc" />

                <!-- 版本信息 -->

                <RelativeLayout
                    android:id="@+id/btn_about"
                    style="@style/exploreItemBg"
                    android:layout_height="48dp"
                    android:background="@drawable/filter_right_down_selector" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="18dip"
                        android:text="@string/settings_about"
                        android:textColor="@color/color_black" />

                    <ImageView
                        android:id="@+id/img_arrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="18dip"
                        android:contentDescription="@null"
                        android:src="@drawable/navigation_forward"
                        android:visibility="visible" />

                    <ImageView
                        android:id="@+id/img_new"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="12dp"
                        android:layout_toLeftOf="@id/img_arrow"
                        android:src="@drawable/icon_new_ad"
                        android:visibility="gone" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:background="@color/broadcast_trending_cccccc" />
            </LinearLayout>

            <Button
                android:id="@+id/btn_logout"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/long_button_height"
                android:layout_margin="18dp"
                android:background="@drawable/btn_predict_win_bg_selector"
                android:gravity="center"
                android:padding="4dp"
                android:text="@string/log_out"
                android:textColor="@color/red"
                android:textSize="18sp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>