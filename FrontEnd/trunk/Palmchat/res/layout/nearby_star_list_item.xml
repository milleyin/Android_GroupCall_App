<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="87dp"
    android:background="@drawable/uilist"
    android:padding="5dp" >

    <TextView
        android:id="@+id/text_range"
        android:layout_width="41dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:text="24"
        android:textColor="@color/look_around_range1"
        android:textSize="18sp" />

    <RelativeLayout
        android:id="@+id/head_layout"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginRight="16dp"
        android:layout_toRightOf="@+id/text_range" >

        <ImageView
            android:id="@+id/img_photo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/head_male2"
            android:contentDescription="@string/empty" />
    </RelativeLayout>

    <TextView
        android:id="@+id/text_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/head_layout"
        android:ellipsize="end"
        android:maxEms="8"
        android:paddingRight="10dp"
        android:singleLine="true"
        android:text="Rendy"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/text_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_name"
        android:layout_marginBottom="7dp"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@+id/head_layout"
        android:background="@drawable/icon_sexage_bg"
        android:drawableLeft="@drawable/icon_sexage_girl"
        android:lines="1"
        android:paddingRight="4dp"
        android:textColor="@color/white"
        android:textSize="9sp" />

    <TextView
        android:id="@+id/text_sign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_age"
        android:layout_toRightOf="@+id/head_layout"
        android:ellipsize="end"
        android:lines="1"
        android:maxEms="13"
        android:paddingRight="10dp"
        android:singleLine="true"
        android:text="Hello all"
        android:textColor="@color/look_around_range_normal"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/text_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_sign"
        android:layout_toRightOf="@+id/head_layout"
        android:drawableLeft="@drawable/icon_region"
        android:paddingLeft="5dp"
        android:paddingRight="10dp"
        android:text="0.21km"
        android:textColor="@color/look_around_range_normal"
        android:textSize="11sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/text_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_sign"
        android:layout_toRightOf="@+id/text_distance"
        android:drawableLeft="@drawable/icon_time"
        android:paddingLeft="5dp"
        android:paddingRight="10dp"
        android:text="1 minute age"
        android:textColor="@color/look_around_range_normal"
        android:textSize="11sp"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/img_fire"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="11dp"
            android:background="@drawable/icon_fire123"
            android:contentDescription="@string/empty" />

        <TextView
            android:id="@+id/text_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="8600"
            android:textColor="@color/look_around_range1"
            android:textSize="15sp" />
    </LinearLayout>

</RelativeLayout>