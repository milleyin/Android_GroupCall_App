<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/home_list"
    android:minHeight="72dp"
    android:layout_gravity="center_vertical">
    <ImageView
        android:id="@+id/wraphead"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp"
        android:contentDescription="@string/empty"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="7dip"
        android:layout_marginTop="13dp"
        android:layout_toRightOf="@id/wraphead"
        android:layout_toLeftOf="@+id/folloe_button_layout"
        android:ellipsize="end"
        android:maxEms="8"
        android:singleLine="true"
        android:text="@string/app_name"
        android:textColor="@drawable/gender_text_color"
        android:textSize="16sp"
        />

    <LinearLayout
        android:id="@+id/folloe_button_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        >

        <TextView
            android:id="@+id/follow"
            android:layout_width="76dp"
            android:layout_height="28dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="18dp"
            android:background="@drawable/btn_follow_selected"
            android:gravity="center"
            android:text="@string/follow"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/followed"
            android:layout_width="76dp"
            android:layout_height="28dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="18dp"
            android:gravity="center"
            android:text="@string/followed"
            android:textColor="@color/text_level_3"
            android:textSize="14sp"
            android:visibility="gone"/>

    </LinearLayout>

    <TextView
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="10dip"
        android:layout_marginTop="6dp"
        android:layout_toRightOf="@+id/wraphead"
        android:layout_toLeftOf="@+id/folloe_button_layout"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="dfasfafa"
        android:textColor="@color/public_account_tip"
        android:textSize="14sp" />

    
        <View android:id="@+id/linefault_view"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_marginLeft="15dp"
        android:background="@drawable/dibidingline_1"
        android:layout_toRightOf="@+id/wraphead"
        android:layout_alignParentBottom="true"
        android:visibility="visible"/>
        <View
        android:id="@+id/linefull_view"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/dividingline_582"
        android:visibility="gone" />
    </RelativeLayout>