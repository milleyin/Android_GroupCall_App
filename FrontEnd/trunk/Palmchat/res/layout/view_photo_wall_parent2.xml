<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/layout_1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:gravity="center_horizontal" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="1dp" >

            <com.afmobi.palmchat.ui.customview.MyImageView
                android:id="@+id/photo_wall_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_gallery_downloadfailed"
                android:visibility="visible" />

            <ProgressBar
                android:id="@+id/pb_1"
                style="@style/loading_dialog"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_centerInParent="true"
                android:contentDescription="@string/empty"
                android:visibility="gone" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp" >

            <com.afmobi.palmchat.ui.customview.MyImageView
                android:id="@+id/photo_wall_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_gallery_downloadfailed"
                android:visibility="visible" />

            <ProgressBar
                android:id="@+id/pb_2"
                style="@style/loading_dialog"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_centerInParent="true"
                android:contentDescription="@string/empty"
                android:visibility="gone" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp" >

            <com.afmobi.palmchat.ui.customview.MyImageView
                android:id="@+id/photo_wall_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_gallery_downloadfailed"
                android:visibility="visible" />

            <ProgressBar
                android:id="@+id/pb_3"
                style="@style/loading_dialog"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_centerInParent="true"
                android:contentDescription="@string/empty"
                android:visibility="gone" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="1dp"
            android:layout_height="wrap_content" >

            <com.afmobi.palmchat.ui.customview.MyImageView
                android:id="@+id/photo_wall_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_gallery_downloadfailed"
                android:visibility="visible" />

            <ProgressBar
                android:id="@+id/pb_4"
                style="@style/loading_dialog"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_centerInParent="true"
                android:contentDescription="@string/empty"
                android:visibility="gone" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:orientation="horizontal"
        android:gravity="center_horizontal" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="1dp" >

            <com.afmobi.palmchat.ui.customview.MyImageView
                android:id="@+id/photo_wall_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_gallery_downloadfailed"
                android:visibility="visible" />

            <ProgressBar
                android:id="@+id/pb_5"
                style="@style/loading_dialog"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_centerInParent="true"
                android:contentDescription="@string/empty"
                android:visibility="gone" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp" >

            <com.afmobi.palmchat.ui.customview.MyImageView
                android:id="@+id/photo_wall_6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_gallery_downloadfailed"
                android:visibility="visible" />

            <ProgressBar
                android:id="@+id/pb_6"
                style="@style/loading_dialog"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_centerInParent="true"
                android:contentDescription="@string/empty"
                android:visibility="gone" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp" >

            <com.afmobi.palmchat.ui.customview.MyImageView
                android:id="@+id/photo_wall_7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_gallery_downloadfailed"
                android:visibility="visible" />

            <ProgressBar
                android:id="@+id/pb_7"
                style="@style/loading_dialog"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_centerInParent="true"
                android:contentDescription="@string/empty"
                android:visibility="gone" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_weight="1"

            android:layout_marginLeft="1dp"
            android:layout_height="wrap_content" >

            <com.afmobi.palmchat.ui.customview.MyImageView
                android:id="@+id/photo_wall_8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_gallery_downloadfailed"
                android:visibility="visible" />

            <ProgressBar
                android:id="@+id/pb_8"
                style="@style/loading_dialog"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_centerInParent="true"
                android:contentDescription="@string/empty"
                android:visibility="gone" />
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dip"
        android:layout_marginLeft="18dip"
        android:text="@string/warning_delete"
        android:textColor="#777777"
        android:textSize="13sp"
        android:visibility="gone" />

</LinearLayout>