<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="55dip"
        android:background="@drawable/filter_triangle"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@color/color_main_bg"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dip"
            android:layout_marginTop="18dip"
            android:text="@string/gender"
            android:textColor="@color/base_back_1"
            android:textSize="16sp"
            android:visibility="visible" />

        <RadioGroup
            android:id="@+id/gender_radio_g"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/gender_all"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/filter_mid_selector"
                android:button="@null"
                android:checked="true"
                android:gravity="center"
                android:text="@string/all"
                android:textColor="@drawable/radion_btn_txt_color_selector" />

            <RadioButton
                android:id="@+id/gender_male"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/filter_mid_selector"
                android:button="@null"
                android:gravity="center"
                android:text="@string/male"
                android:textColor="@drawable/radion_btn_txt_color_selector" />

            <RadioButton
                android:id="@+id/gender_female"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/filter_mid_selector"
                android:button="@null"
                android:gravity="center"
                android:text="@string/female"
                android:textColor="@drawable/radion_btn_txt_color_selector" />
        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dip"
            android:layout_marginTop="8dip"
            android:text="@string/photo"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:visibility="gone" />

        <RadioGroup
            android:id="@+id/photo_radio_g"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone" >

            <RadioButton
                android:id="@+id/photo_all"
                android:layout_width="fill_parent"
                android:layout_height="39dp"
                android:layout_weight="1"
                android:background="@drawable/filter_left_selector"
                android:button="@null"
                android:checked="true"
                android:gravity="center"
                android:text="@string/all"
                android:textColor="@drawable/radion_btn_txt_color_selector" />

            <RadioButton
                android:id="@+id/photo_with"
                android:layout_width="fill_parent"
                android:layout_height="39dp"
                android:layout_weight="1"
                android:background="@drawable/filter_right_selector"
                android:button="@null"
                android:gravity="center"
                android:text="@string/with_photo"
                android:textColor="@drawable/radion_btn_txt_color_selector" />
        </RadioGroup>

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@drawable/table_searchby_bg_leftup" >

            <Button
                android:id="@+id/btn_vibrate"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:gravity="left|center_vertical"
                android:paddingLeft="18dp"
                android:layout_gravity="center_vertical"
                android:text="@string/online"
                android:textColor="@color/color_black"
                android:textSize="18sp" />

            <CheckBox
                android:id="@+id/checkbox_vibrate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="18dp"
                android:button="@drawable/setting_check_selector" />
        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dip"
            android:layout_marginTop="18dip"
            android:text="@string/locals_area"
            android:textColor="@color/base_back_1"
            android:textSize="16sp"
            android:visibility="visible" />

        <RadioGroup
            android:id="@+id/gender_radio_Area"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/radio_city"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/filter_mid_selector"
                android:button="@null"
                android:singleLine="true"
                android:checked="true"
                android:gravity="center"
                android:textColor="@drawable/radion_btn_txt_color_selector" />

            <RadioButton
                android:id="@+id/radio_Nearby"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/filter_mid_selector"
                android:button="@null"
                android:gravity="center"
                android:text="@string/look_nearby"
                android:textColor="@drawable/radion_btn_txt_color_selector" />
        </RadioGroup>

        <Button
            android:id="@+id/ok_btn"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/long_button_height"
            android:layout_marginBottom="24dip"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_marginTop="30dip"
            android:background="@drawable/btn_predict_win_bg_selector"
            android:text="@string/ok"
            android:textSize="18sp"
            android:textColor="@color/chats_17a5ef" />
    </LinearLayout>

</LinearLayout>