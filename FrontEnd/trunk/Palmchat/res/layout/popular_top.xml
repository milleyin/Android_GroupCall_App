<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/uilist"
    android:orientation="vertical" >
    <TextView 
        android:layout_width="fill_parent"
        android:layout_height="36dp"
        android:paddingLeft="18dp"
        android:gravity="bottom"
        android:background="@color/color_login_bg"
        android:paddingBottom="6dp"
        android:textSize="16dp"
        android:textColor="@color/text_level_2"
        android:text="@string/tags"/>
    <View
        android:layout_width="fill_parent"
        android:layout_height="0.1dp"
        android:background="@drawable/dividingline_560"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center">
    <HorizontalScrollView
        android:id="@+id/hv_tag"
        android:layout_width="fill_parent"
        android:layout_height="91dp"
        android:scrollbars="none"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center">

            <GridView
                android:id="@+id/gv_tag"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:listSelector="@null"
                android:numColumns="auto_fit"
                android:stretchMode="spacingWidthUniform" >
            </GridView>
        </LinearLayout>
    </HorizontalScrollView>
    </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="0.1dp"
        android:background="@drawable/dividingline_582" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:background="@color/color_login_bg"/>
    <View
        android:layout_width="fill_parent"
        android:layout_height="0.1dp"
        android:background="@drawable/dividingline_582" />
</LinearLayout>