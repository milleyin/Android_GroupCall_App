<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/SystemBarTint_Style"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical" >

        <include layout="@layout/head_back_title_more" />

        <LinearLayout
            android:id="@+id/linear_forget"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:gravity="center"
                android:text="@string/forget_password"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/secure_answer"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@drawable/button_hight_large_selector2"
                android:text="@string/secure_answer"
                android:textColor="@color/color_btn"
                android:visibility="gone" />

            <Button
                android:id="@+id/email_forgot"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@drawable/button_hight_large_selector2"
                android:text="@string/email_address"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/number_forgot"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/button_hight_large_selector2"
                android:text="@string/phone_number"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/cancel_forgot"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/button_hight_large_selector2"
                android:text="@string/cancel"
                android:textColor="@color/color_btn"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>