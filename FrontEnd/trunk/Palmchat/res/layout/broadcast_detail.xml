<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/SystemBarTint_Style"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/r_paofile"
    android:minHeight="60dip"
    android:orientation="vertical">

    <include layout="@layout/head_back_title_more" />

    <com.afmobi.palmchat.ui.customview.KeyboardListenRelativeLayoutEditText
        android:id="@+id/bc_detail"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:background="@color/white">

        <com.afmobi.palmchat.ui.customview.MyScrollView
            android:id="@+id/my_sv"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_above="@+id/layout_bottom_cmd"
            android:layout_marginBottom="@dimen/broadcast_bar_shadeupheight_size">

            <LinearLayout
                android:id="@+id/bc_item"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/uilist"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <!-- 只有当转发的才会有这一条，表示转发的人的Profile -->

                <RelativeLayout
                    android:id="@+id/userprofile_forward"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/d_broadcast_item_margin"
                    android:paddingLeft="@dimen/d_broadcast_item_margin"
                    android:paddingRight="@dimen/d_broadcast_item_margin"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/head_img_forward"
                        android:layout_width="@dimen/d_broadcast_headszie"
                        android:layout_height="@dimen/d_broadcast_headszie"
                        android:layout_marginTop="@dimen/d_broadcast_item_margin"
                        android:src="@drawable/head_male2" />

                    <RelativeLayout
                        android:id="@+id/linearLayout1_forward"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/d_broadcast_item_margin"
                        android:layout_marginTop="@dimen/d_broadcast_item_margin"
                        android:layout_toLeftOf="@+id/rl_broadcastdetail_item_follow"
                        android:layout_toRightOf="@+id/head_img_forward">

                        <TextView
                            android:id="@+id/name_txt_forward"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:drawablePadding="6dp"
                            android:ellipsize="end"
                            android:gravity="left"
                            android:singleLine="true"
                            android:textColor="@color/color_nice_blue"
                            android:textSize="16sp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/head_img_forward"
                        android:layout_alignLeft="@+id/linearLayout1_forward"
                        android:gravity="center_vertical">

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_toLeftOf="@+id/txt_other_btn_forward"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/icon_time"
                                    android:contentDescription="@string/empty"
                                    android:visibility="gone" />

                                <TextView
                                    android:id="@+id/time_txt_forward"
                                    style="@style/list_second_text"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="3dp"
                                    android:ellipsize="end"
                                    android:singleLine="true"
                                    android:text="2013 Jan 11:28:50"
                                    android:textColor="@color/text_level_3"
                                    android:textSize="@dimen/d_broadcast_desc_sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/lin_range_forward"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical">

                                <View
                                    android:id="@+id/view_line_forward"
                                    android:layout_width="1dp"
                                    android:layout_height="fill_parent"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="10dp"
                                    android:background="@color/text_level_3" />

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/icon_region"
                                    android:contentDescription="@string/empty"
                                    android:visibility="gone" />

                                <TextView
                                    android:id="@+id/range_txt_forward"
                                    style="@style/list_second_text"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:ellipsize="end"
                                    android:singleLine="true"
                                    android:textColor="@color/text_level_3"
                                    android:textSize="@dimen/d_broadcast_desc_sp" />
                            </LinearLayout>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/txt_other_btn_forward"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="10dp"
                            android:focusable="false"
                            android:gravity="center_vertical|right"
                            android:minWidth="50dp"
                            android:singleLine="true"
                            android:textColor="@color/red"
                            android:textSize="10sp"
                            android:visibility="gone" />
                    </RelativeLayout>

                    <!-- 当转发时转发的人的文字 -->

                    <com.afmobi.palmchat.ui.customview.TextViewFixTouchConsume
                        android:id="@+id/message_txt_forward"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/head_img_forward"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/d_broadcast_item_margin"
                        android:layout_marginRight="@dimen/d_broadcast_item_margin"
                        android:layout_marginTop="16dp"
                        android:autoLink="web"
                        android:textColor="@color/text_level_1"
                        android:textColorLink="@color/chats_17a5ef"
                        android:textSize="15sp" />
                </RelativeLayout>

                <!-- 发广播的人的Profile 如果是转发  就是转发原文的人的Profile -->

                <RelativeLayout
                    android:id="@+id/userprofile"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/d_broadcast_item_margin"
                    android:paddingLeft="@dimen/d_broadcast_item_margin"
                    android:paddingRight="@dimen/d_broadcast_item_margin">

                    <ImageView
                        android:id="@+id/head_img"
                        android:layout_width="@dimen/d_broadcast_headszie"
                        android:layout_height="@dimen/d_broadcast_headszie"
                        android:layout_marginTop="2dp"
                        android:src="@drawable/head_male2" />

                    <LinearLayout
                        android:id="@+id/linearLayout1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/d_broadcast_item_margin"
                        android:layout_toRightOf="@+id/head_img"
                        android:layout_marginTop="2dp"
                        android:orientation="horizontal" >
 

                        <!-- 公共账号标志 -->

                        <ImageView
                            android:id="@+id/pa_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="6dp"
                            android:src="@drawable/icon_chat_list_public_account_messages"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/name_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:gravity="left"
                            android:singleLine="true"
                            android:textColor="#117eb6"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/sex_age_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dip"
                            android:background="@drawable/icon_sexage_bg"
                            android:drawableLeft="@drawable/icon_sexage_boy"
                            android:gravity="bottom|right"
                            android:lineSpacingExtra="2dp"
                            android:paddingRight="2dp"
                            android:textColor="@color/white"
                            android:textSize="9sp"
                            android:visibility="gone" />
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/linearLayout1"
                        android:layout_alignParentBottom="true"
                        android:layout_below="@+id/linearLayout1"
                        android:gravity="center_vertical">

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_toLeftOf="@+id/txt_other_btn"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/icon_time"
                                    android:contentDescription="@string/empty"
                                    android:visibility="gone" />

                                <TextView
                                    android:id="@+id/time_txt"
                                    style="@style/list_second_text"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="3dp"
                                    android:ellipsize="end"
                                    android:singleLine="true"
                                    android:text="2013 Jan 11:28:50"
                                    android:textColor="@color/text_level_3"
                                    android:textSize="@dimen/d_broadcast_desc_sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/lin_range"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical">

                                <View
                                    android:id="@+id/view_line"
                                    android:layout_width="1dp"
                                    android:layout_height="fill_parent"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="10dp"
                                    android:background="@color/text_level_3" />

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/icon_region"
                                    android:contentDescription="@string/empty"
                                    android:visibility="gone" />

                                <TextView
                                    android:id="@+id/range_txt"
                                    style="@style/list_second_text"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:ellipsize="end"
                                    android:singleLine="true"
                                    android:textColor="@color/text_level_3"
                                    android:textSize="@dimen/d_broadcast_desc_sp" />
                            </LinearLayout>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/txt_other_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="10dp"
                            android:focusable="false"
                            android:gravity="center_vertical|right"
                            android:minWidth="50dp"
                            android:singleLine="true"
                            android:textColor="@color/red"
                            android:textSize="10sp"
                            android:visibility="gone" />
                    </RelativeLayout>
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/lin_msg_part"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.afmobi.palmchat.ui.customview.TextViewFixTouchConsume
                        android:id="@+id/message_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/d_broadcast_item_margin"
                        android:layout_marginRight="15dp"
                        android:autoLink="web"
                        android:textColor="@color/text_level_1"
                        android:textColorLink="@color/chats_17a5ef"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/type_unknow_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/d_broadcast_item_margin"
                        android:autoLink="web"
                        android:background="@color/broadcast_unknow_color"
                        android:lineSpacingExtra="2sp"
                        android:paddingBottom="31dp"
                        android:paddingLeft="@dimen/d_broadcast_item_margin"
                        android:paddingRight="@dimen/d_broadcast_item_margin"
                        android:paddingTop="31dp"
                        android:text="@string/the_broadcast_unknow"
                        android:textColor="@color/text_level_2"
                        android:textSize="14sp"
                        android:visibility="gone" />

                    <com.afmobi.palmchat.ui.customview.FlowLayout
                        android:id="@+id/lin_pic"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginTop="8dp"
                        android:focusable="false"
                        android:orientation="horizontal"
                        android:visibility="visible" />

                    <LinearLayout
                        android:id="@+id/lin_play_icon_to_voice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/d_broadcast_item_margin"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/broadcast_voiceload"
                        android:focusable="false"
                        android:gravity="center"
                        android:minWidth="150dp"
                        android:paddingRight="15dp"
                        android:visibility="gone">

                        <com.afmobi.palmchat.gif.GifImageView
                            android:id="@+id/gif"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/voice_loading"
                            android:gravity="center"
                            android:visibility="visible" />

                        <ImageView
                            android:id="@+id/play_icon_to_voice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="6dp"
                            android:background="@drawable/chatting_voice_player_icon"
                            android:clickable="true"
                            android:contentDescription="@string/empty"
                            android:textColor="@color/black"
                            android:visibility="gone" />

                        <ImageView
                            android:id="@+id/play_icon_to_voice_anim"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:background="@drawable/voice_anim01"
                            android:clickable="true"
                            android:contentDescription="@string/empty"
                            android:textColor="@color/black"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/play_time_to_voice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginRight="2dp"
                            android:gravity="center"
                            android:textColor="@color/color_blue"
                            android:visibility="gone" />
                    </LinearLayout>

                    <!-- 视频布局 -->
                    <!-- 视频布局 -->

                    <RelativeLayout
                        android:id="@+id/fl_video_layout"
                        android:layout_width="fill_parent"
                        android:layout_height="200dp"
                        android:background="@android:color/black"
                        android:visibility="gone">

                        <com.afmobi.palmchat.ui.customview.videoview.CustomVideoController
                            android:id="@+id/custom_video_controller"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                        </com.afmobi.palmchat.ui.customview.videoview.CustomVideoController>

                    </RelativeLayout>
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/view_like"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:layout_marginLeft="@dimen/d_broadcast_item_margin"
                    android:layout_marginRight="@dimen/d_broadcast_item_margin"
                    android:layout_marginTop="12dp"
                    android:duplicateParentState="false">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="4dp"
                        android:layout_toLeftOf="@+id/txt_like"
                        android:duplicateParentState="false"
                        android:text="@string/like"
                        android:textColor="@color/broadcast_trending_868892"
                        android:textSize="@dimen/broadcast_tags_tag_mark_size" />

                    <TextView
                        android:id="@+id/txt_like"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="12dp"
                        android:layout_toLeftOf="@+id/like_heads"
                        android:duplicateParentState="false"
                        android:textColor="@color/broadcast_trending_868892"
                        android:textSize="@dimen/broadcast_tags_tag_mark_size" />

                    <RelativeLayout
                        android:id="@+id/like_heads"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/img_more"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/like_head1"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:duplicateParentState="true"
                            android:visibility="gone" />

                        <ImageView
                            android:id="@+id/like_head1_paicon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/like_head1"
                            android:layout_alignRight="@+id/like_head1"
                            android:duplicateParentState="true"
                            android:src="@drawable/icon_broadcast_list_like_public_account"
                            android:visibility="gone" />

                        <ImageView
                            android:id="@+id/like_head2"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="6dp"
                            android:layout_toRightOf="@+id/like_head1"
                            android:duplicateParentState="true"
                            android:visibility="gone" />

                        <ImageView
                            android:id="@+id/like_head2_paicon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/like_head2"
                            android:layout_alignRight="@+id/like_head2"
                            android:duplicateParentState="true"
                            android:src="@drawable/icon_broadcast_list_like_public_account"
                            android:visibility="gone" />

                        <ImageView
                            android:id="@+id/like_head3"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="6dp"
                            android:layout_toRightOf="@+id/like_head2"
                            android:duplicateParentState="true"
                            android:visibility="gone" />

                        <ImageView
                            android:id="@+id/like_head3_paicon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/like_head3"
                            android:layout_alignRight="@+id/like_head3"
                            android:duplicateParentState="true"
                            android:src="@drawable/icon_broadcast_list_like_public_account"
                            android:visibility="gone" />
                    </RelativeLayout>

                    <ImageView
                        android:id="@+id/img_more"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="12dp"
                        android:background="@drawable/arrow_right"
                        android:duplicateParentState="true" />
                </RelativeLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.1dip"
                    android:background="@drawable/dividingline_582"
                    android:visibility="visible" />

                <LinearLayout
                    android:id="@+id/lin_comment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="18dp"
                    android:layout_marginTop="22dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/comment_total"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="18dp"
                        android:layout_marginLeft="@dimen/d_broadcast_item_margin"
                        android:layout_marginRight="@dimen/d_broadcast_item_margin"
                        android:textColor="@color/text_level_2"
                        android:textSize="@dimen/broadcast_tags_tag_mark_size" />

                    <com.afmobi.palmchat.ui.customview.MyListView
                        android:id="@+id/lv_comment"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="24dp"
                        android:background="@color/transparent"
                        android:cacheColorHint="#00000000"
                        android:divider="@null"
                        android:listSelector="@drawable/comment_uilist"
                        android:visibility="visible" />

                    <LinearLayout
                        android:id="@+id/view_comment_more"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                        <View
                            android:layout_width="fill_parent"
                            android:layout_height="0.1dip"
                            android:background="@drawable/dividingline_582"
                            android:visibility="visible" />

                        <TextView
                            android:id="@+id/txt_comment_more"
                            android:layout_width="fill_parent"
                            android:layout_height="40dp"
                            android:background="@drawable/uilist"
                            android:gravity="center"
                            android:text="@string/view_more_comment"
                            android:textColor="@color/text_level_3" />

                        <ProgressBar
                            android:id="@+id/bar"
                            style="@style/loading_dialog"
                            android:layout_width="30dip"
                            android:layout_height="30dip"
                            android:layout_marginTop="5dp"
                            android:indeterminate="true"
                            android:visibility="gone"></ProgressBar>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </com.afmobi.palmchat.ui.customview.MyScrollView>

        <LinearLayout
            android:id="@+id/input_box_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">

            <LinearLayout
                android:id="@id/chatting_options_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_toolbar_tagpage"
                android:orientation="horizontal"
                android:visibility="gone">

                <LinearLayout
                    android:id="@id/un_talk"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1.0"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@id/chatting_message_edit"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1.0"
                        android:background="@drawable/textbox"
                        android:gravity="center_vertical"
                        android:hint="@string/hint_commet"
                        android:imeOptions="actionSend|flagNoEnterAction"
                        android:inputType="textCapSentences|textAutoCorrect|textMultiLine|textShortMessage"
                        android:maxLines="4"
                        android:minHeight="36.0dip"
                        android:nextFocusRight="@id/chatting_send_button"
                        android:textColor="@color/black"
                        android:textColorHint="@color/text_level_5"
                        android:textSize="15sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/list_cl"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/image_emotion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:paddingBottom="10dp"
                        android:paddingLeft="18.0dp"
                        android:paddingRight="9.0dip"
                        android:paddingTop="10dp"
                        android:src="@drawable/chatting_room_smile_selector" />
                </LinearLayout>

                <FrameLayout
                    android:id="@id/chatting_operate_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingBottom="10dp"
                    android:paddingLeft="9.0dp"
                    android:paddingRight="18.0dip"
                    android:paddingTop="10dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
