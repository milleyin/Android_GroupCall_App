<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/SystemBarTint_Style"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_login_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical"
        android:layout_marginTop="24dp">

        <TextView
            android:id="@+id/tv_getstart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="34dp"
            android:gravity="center"
            android:text="@string/congratulations"
            android:textColor="@color/invite_friend_phonenum"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/tv_notice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="@string/registered_successfully"
            android:textColor="@color/log_gray" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.1dp"
            android:background="@drawable/dividingline_582" />

        <RelativeLayout
            android:id="@+id/rl_palmid"
            style="@style/profile_layout1"
            android:layout_height="48dp" >

            <TextView
                android:id="@+id/tv_palmid_left"
                style="@style/profile_detail_key"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:text="@string/af_id"
                android:textColor="@color/text_level_2" />

            <TextView
                android:id="@+id/tv_palmid_right"
                style="@style/profile_detail_value"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:singleLine="true"
                android:textColor="@color/text_level_1" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.1dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="10dp"
                android:background="@drawable/dividingline_560" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_name"
            style="@style/profile_layout1" >

            <TextView
                android:id="@+id/tv_name_left"
                style="@style/profile_detail_key"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:text="@string/name"
                android:textColor="@color/text_level_2" />

            <TextView
                android:id="@+id/tv_name_right"
                style="@style/profile_detail_value"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:singleLine="true"
                android:textColor="@color/text_level_1" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.1dp"
            android:background="@drawable/dividingline_582" />

        <Button
            android:id="@+id/btn_complete"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:layout_centerInParent="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="34dp"
            android:background="@drawable/login_button_selector"
            android:text="@string/enter_palmchat"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>