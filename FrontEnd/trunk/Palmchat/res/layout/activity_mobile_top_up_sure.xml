<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_back"
    android:orientation="vertical" >

    <include
        android:id="@id/title_layout"
        layout="@layout/head_back_title_more" />

    <TextView
        android:id="@+id/tv_phone_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="36dp"
        android:textColor="@color/public_group_memeber_color"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_title_airtime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="18dp"
        android:textColor="@color/public_group_memeber_color"
        android:textSize="18sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18sp"
        android:layout_marginTop="55dp"
        android:text="@string/payment_mode"
        android:textColor="@color/text_level_2"
        android:textSize="13sp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.1dp"
        android:layout_marginTop="8dp"
        android:background="@color/main_bg" >
    </View>

    <RelativeLayout
        android:id="@+id/rl_palmcoin"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:background="@color/white" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="18dip"
            android:text="@string/palmcoin"
            android:textColor="@color/public_group_memeber_color"
            android:textSize="16sp" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_alignParentRight="true" >

            <TextView
                android:id="@+id/tv_palmcoin_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="18dp"
                android:drawablePadding="8dp"
                android:drawableRight="@drawable/storeicon_goldcoin"
                android:inputType="none"
                android:singleLine="true"
                android:textColor="@color/look_around_range1"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_insufficient_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="18dp"
                android:textColor="@color/public_group_disband_color"
                android:textSize="16sp"
                android:visibility="gone" />
        </FrameLayout>
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.1dp"
        android:background="@color/main_bg" >
    </View>

    <Button
        android:id="@+id/btn_confirm"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/login_button_selector"
        android:text="@string/who_recommend_confirm"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btn_recharge"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/btn_predict_excharge_bg_selector"
        android:text="@string/predict_win_recharge"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:visibility="gone" />

</LinearLayout>