<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/SystemBarTint_Style"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include
        android:id="@id/title_layout"
        layout="@layout/head_back_title_more" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/base_back"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_amount_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/text_level_2"
            android:textSize="13sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/main_bg" />

        <com.afmobi.palmchat.ui.customview.TextViewDropDown
            android:id="@+id/tv_amount"
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:background="@color/color_white"
            android:drawableRight="@drawable/ic_attr_close"
            android:gravity="center_vertical"
            android:paddingLeft="18dp"
            android:paddingRight="20dp"
            android:textColor="@color/public_group_memeber_color"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/main_bg" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="20dp"
            android:text="@string/payment_mode"
            android:textColor="@color/text_level_2"
            android:textSize="13sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/main_bg" />

        <com.afmobi.palmchat.ui.customview.TextViewDropDown
            android:id="@+id/tv_payment_mode"
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:background="@color/color_white"
            android:gravity="center_vertical"
            android:paddingLeft="18dp"
            android:paddingRight="20dp"
            android:textColor="@color/public_group_memeber_color"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/main_bg" />

        <Button
            android:id="@+id/btn_confirm"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_marginTop="65dp"
            android:background="@drawable/login_button_selector"
            android:text="@string/who_recommend_confirm"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/img_help"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="18dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/btn_help" />
    </LinearLayout>

</LinearLayout>