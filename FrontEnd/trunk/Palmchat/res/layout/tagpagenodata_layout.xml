<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
	android:background="@color/predict_d10">
    
    <!-- 无数据布局 -->
	<RelativeLayout
		android:id="@+id/broadcast_tagposts_no_data"
      	android:layout_width="fill_parent"
       	android:layout_height="match_parent"
       	android:background="@color/predict_d10"
		android:gravity="center"
       	android:orientation="vertical"
       	android:visibility="visible" >

		<ImageView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:background="@drawable/img_loadnothing_giraffe"
	        android:contentDescription="@null"
	        android:id="@+id/tagpage_nodata_imgid"
	        android:layout_centerHorizontal="true"
	        android:visibility="visible" />
	
	    <TextView
	        android:id="@+id/broadcast_tagposts_nodata0_id"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content" 
	        android:text="@string/broadcast_tagpage_nocontent"
	        android:textColor="@color/broadcast_trending_868892"
	      	android:layout_marginTop="@dimen/broadcast_tagpage_nocontent0_textmargintop_size"
	        android:layout_centerHorizontal="true"
	        android:layout_below="@id/tagpage_nodata_imgid"
	        android:textSize="@dimen/broadcast_blankview_text_size"/>
	    
	    <TextView
	        android:id="@+id/broadcast_tagposts_nodata1_id"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/broadcast_tagpage_nocontent1"
	        android:layout_below="@id/broadcast_tagposts_nodata0_id"
	        android:layout_centerHorizontal="true"
	        android:textColor="@color/broadcast_trending_868892"
	        android:textSize="@dimen/broadcast_blankview_text_size"
	        android:layout_marginTop="@dimen/broadcast_tagpage_empty_textmargin_size"/>
	</RelativeLayout>
    

</RelativeLayout>
