<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/SystemBarTint_Style"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.afmobi.palmchat.ui.customview.KeyboardListenRelativeLayout
        android:id="@+id/keyboardRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_login_bg"
            android:orientation="vertical" >

            <include
                android:id="@id/title_setpass_layout"
                layout="@layout/head_back_title_more" />

            <ScrollView
                android:id="@+id/sv"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" >

                <RelativeLayout
                    android:id="@+id/register_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical"
                    android:paddingLeft="18dp"
                    android:paddingRight="18dp" >

                    <TextView
                        android:id="@id/old_password_label"
                        style="@style/vertical_text_style"
                        android:layout_marginTop="18dp"
                        android:text="@string/old_password"
                        android:textColor="@color/text_level_2" />

                    <EditText
                        android:id="@id/old_password"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/old_password_label"
                        android:layout_marginTop="9dp"
                        android:background="@drawable/text_fouse_selector"
                        android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                        android:gravity="center_vertical"
                        android:hint="@string/set_your_password"
                        android:inputType="text"
                        android:maxLength="16"
                        android:maxWidth="200dp"
                        android:paddingLeft="10dip"
                        android:paddingRight="10dip"
                        android:singleLine="true"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@id/new_password_label"
                        style="@style/vertical_text_style"
                        android:layout_below="@+id/old_password"
                        android:layout_marginTop="30dp"
                        android:text="@string/new_password"
                        android:textColor="@color/text_level_2" />

                    <EditText
                        android:id="@id/new_password"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/new_password_label"
                        android:layout_marginTop="9dp"
                        android:background="@drawable/text_fouse_selector"
                        android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                        android:gravity="center_vertical"
                        android:hint="@string/set_your_password"
                        android:inputType="text"
                        android:maxLength="16"
                        android:maxWidth="200dp"
                        android:paddingLeft="10dip"
                        android:paddingRight="10dip"
                        android:singleLine="true"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/forget_pwd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_below="@id/new_password"
                        android:layout_gravity="right"
                        android:layout_marginTop="18dp"
                        android:text="@string/forget_password"
                        android:textColor="@color/invite_friend_phonenum"
                        android:textSize="15sp"
                        android:visibility="gone" />
                </RelativeLayout>
            </ScrollView>
        </LinearLayout>

       <!-- <RelativeLayout
            android:id="@id/ok_button"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/bg_tag_profile_chat" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginTop="10dip"
                android:drawableLeft="@drawable/change_password_selector"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:text="@string/confirm"
                android:textColor="@drawable/button_profile_text_selector" />
        </RelativeLayout>-->
    </com.afmobi.palmchat.ui.customview.KeyboardListenRelativeLayout>

</FrameLayout>