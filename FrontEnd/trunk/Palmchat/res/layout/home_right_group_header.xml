<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/home_list"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/g_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/friends"
            android:textColor="@color/text_level_1"
            android:layout_marginLeft="10dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/msgcnt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:gravity="center"
            android:text="@string/test_num"
            android:textColor="@color/text_level_1"
            android:textSize="12sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/new_flag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="62dp"
        android:background="@drawable/newprompt"
        android:textSize="10sp" />

</FrameLayout>