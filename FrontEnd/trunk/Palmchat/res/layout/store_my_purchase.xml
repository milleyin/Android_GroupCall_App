<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/SystemBarTint_Style"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.store.StoreMyPurchaseActivity" >

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_login_bg" />
    
	<include
	    android:id="@id/title_layout"
	    layout="@layout/head_back_title_more" />

	<ScrollView
	    style="@style/BaseBackground"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_below="@id/title_layout"
	    android:layout_marginTop="10dp" >

		<LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:background="@drawable/bg_list"
		    android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/explore_line" />

			<RelativeLayout
			    android:id="@+id/my_purchase1"
			    style="@style/exploreItemBg"
			    android:layout_height="48dp"
			    android:background="@drawable/filter_right_down_selector" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dip"
                    android:layout_marginTop="14dp"
                    android:gravity="left|center_vertical"
                    android:text="@string/my_emoji"
                    android:textColor="@color/color_black"
                    android:textSize="18sp" />

				<ImageView
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_alignParentRight="true"
				    android:layout_centerVertical="true"
				    android:layout_marginRight="10dip"
				    android:src="@drawable/navigation_forward"
				    android:contentDescription="@null"
				    android:visibility="visible" />
			</RelativeLayout>

            <RelativeLayout
                android:id="@+id/my_purchase2"
                style="@style/profile_layout"
                android:background="@drawable/list_last_no_arrow_selector"
                android:visibility="gone" >

	            <TextView
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:layout_marginLeft="10dip"
	                android:layout_marginTop="14dp"
	                android:gravity="left|center_vertical"
	                android:text="@string/my_gift"
	                android:textColor="@color/color_black"
	                android:textSize="18sp" />

	            <ImageView
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_alignParentRight="true"
	                android:layout_centerVertical="true"
	                android:layout_marginRight="10dip"
	                android:contentDescription="@null"
	                android:src="@drawable/navigation_forward"
	                android:visibility="visible" />
			</RelativeLayout>

            <RelativeLayout
                android:id="@+id/my_purchase3"
                style="@style/profile_layout"
                android:background="@drawable/list_last_no_arrow_selector"
                android:visibility="gone" >

				<TextView
				    android:layout_width="fill_parent"
				    android:layout_height="wrap_content"
				    android:layout_marginLeft="10dip"
				    android:layout_marginTop="14dp"
				    android:gravity="left|center_vertical"
				    android:textColor="@color/color_black"
				    android:textSize="18sp" />
				
				<ImageView
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_alignParentRight="true"
				    android:layout_centerVertical="true"
				    android:layout_marginRight="10dip"
				    android:contentDescription="@null"
				    android:src="@drawable/navigation_forward"
				    android:visibility="visible" />
			</RelativeLayout>
	
           	<TextView
	            android:layout_width="match_parent"
	            android:layout_height="1px"
	            android:layout_marginLeft="18dp"
	            android:background="@color/explore_line" />

			<RelativeLayout
			    android:id="@+id/my_purchase4"
			    style="@style/exploreItemBg"
			    android:layout_height="48dp"
			    android:background="@drawable/filter_right_down_selector" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dip"
                    android:layout_marginTop="14dp"
                    android:gravity="left|center_vertical"
                    android:text="@string/purchase_history"
                    android:textColor="@color/color_black"
                    android:textSize="18sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dip"
                    android:contentDescription="@null"
                    android:src="@drawable/navigation_forward"
                    android:visibility="visible" />
			</RelativeLayout>

			<TextView
		    	android:layout_width="match_parent"
				android:layout_height="1dp"
				android:background="@color/explore_line" />
		</LinearLayout>
	</ScrollView>
</RelativeLayout>