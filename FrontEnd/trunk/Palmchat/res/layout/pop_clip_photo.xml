<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/SystemBarTint_Style"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
      >

    <RelativeLayout
        android:id="@+id/pop_clip_photo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        tools:context=".MainActivity" >

        <com.afmobi.palmchat.ui.customview.ClipImageView
            android:id="@+id/src_pic"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />

        <com.afmobi.palmchat.ui.customview.ClipView
            android:id="@+id/clipview"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/broadcast_tagpage_dialog_height_size"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:background="@color/black" >

            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="@dimen/d_pr_height"
                android:layout_height="@dimen/accountdetails_follow_margintop_size"
                android:layout_marginLeft="@dimen/accountdetails_arrow_marginright_size"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="@drawable/headportrait_cancel_selector_btn"
                android:text="@string/cancel"
                android:textSize="@dimen/accountdetails_follow_text_size"
                android:textColor="@drawable/headportrait_cancel_selecror_text" />

            <Button
                android:id="@+id/btn_save"
                android:layout_width="@dimen/headportrait_save_widht"
                android:layout_height="@dimen/accountdetails_follow_margintop_size"
                android:background="@drawable/headportrait_save_selector_btn"
                android:layout_marginRight="@dimen/accountdetails_arrow_marginright_size"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:text="@string/save"
                android:textSize="@dimen/accountdetails_follow_text_size"
                android:textColor="@drawable/headportrait_save_selector_text" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>