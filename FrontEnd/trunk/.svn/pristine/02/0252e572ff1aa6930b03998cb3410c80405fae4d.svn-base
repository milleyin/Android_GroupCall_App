<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="72dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textview_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="100dp"
            android:singleLine="true"
            android:textColor="@color/light_gray"
            android:layout_gravity="right"
            android:gravity="right"
            android:text="0" />

        <ImageView
            android:id="@+id/entryflag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:contentDescription="@string/empty"
            android:layout_gravity="right"
            android:background="@drawable/img_chatroom_state"
            android:visibility="gone"/>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/frame_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp" >

        <ImageView
            android:id="@+id/icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:contentDescription="@string/empty" />


    </FrameLayout>

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/frame_icon"
        android:textSize="16dp"
        android:textColor="@color/text_level_1"
        android:text="@string/app_name" />


        <TextView
            android:id="@+id/roomlist_me"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/title"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="@string/chattingroomlist_me"
            android:textSize="16dp"
            android:textColor="@color/verifi_phone_color"
            android:visibility="gone"
            />

    <!--<TextView-->
        <!--android:id="@+id/image_num"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_centerHorizontal="true"-->
        <!--android:layout_marginLeft="5dp"-->
        <!--android:layout_marginTop="5dp"-->
        <!--android:layout_toRightOf="@+id/title"-->
        <!--android:background="@drawable/msgnumber"-->
        <!--android:focusable="false"-->
        <!--android:paddingLeft="5dp"-->
        <!--android:paddingRight="5dp"-->
        <!--android:text="0"-->
        <!--android:gravity="center"-->
        <!--android:textColor="@color/white"-->
        <!--/>-->

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_toRightOf="@+id/frame_icon"
        android:layout_marginLeft="16dp"
        android:layout_alignParentBottom="true"
        android:background="@color/explore_line"
        />

    </RelativeLayout>

</RelativeLayout>