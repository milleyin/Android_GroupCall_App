<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="@color/base_back">
    <!-- 无数据布局 -->
    <RelativeLayout
        android:id="@+id/broadcast_hottoday_no_data"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="@dimen/broadcast_tagpege_margin_height"
        android:visibility="visible" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/img_loadnothing_giraffe"
            android:contentDescription="@null"
            android:id="@+id/hottoday_nodata_imgid"
            android:layout_centerHorizontal="true"
            android:visibility="visible" />

        <TextView
            android:id="@+id/broadcast_hottoday_nodatatext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_data_refresh"
            android:textColor="@color/broadcast_trending_868892"
            android:layout_marginTop="@dimen/broadcast_tagpage_nocontent0_textmargintop_size"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/hottoday_nodata_imgid"
            android:textSize="@dimen/broadcast_blankview_text_size"/>
    </RelativeLayout>
</RelativeLayout>