<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="60dip" >

        <ImageView
            android:id="@+id/img_player_photo_invitefriends"
            style="@style/head_style"
            android:layout_centerVertical="true"
            android:layout_marginLeft="18dp"
            android:contentDescription="@string/empty" />

        <TextView
            android:id="@+id/text_invitefriends"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/img_player_photo_invitefriends"
            android:textColor="@color/c_pr_result"
            android:textSize="16sp"
            android:layout_marginLeft="16dp"
            android:text="ssss"
            android:layout_centerVertical="true"
            />

        <TextView
            android:id="@+id/text_follow_invitefriends"
            android:layout_width="60dp"
            android:layout_height="29dp"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="18dp"
            android:background="@drawable/login_button_selector"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:focusableInTouchMode="false"
            android:text="@string/contacts_invite"
            android:textColor="@color/white" />

    </RelativeLayout>



    <LinearLayout
        android:id="@+id/load_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="29dp"
            android:text="加载更多"
            android:gravity="center"
            android:textColor="#000000"
            />

    </LinearLayout>



</LinearLayout>