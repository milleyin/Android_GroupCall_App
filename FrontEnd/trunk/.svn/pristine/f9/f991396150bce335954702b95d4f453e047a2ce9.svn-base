<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="10dp"
        android:background="@drawable/nav_menu"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/add_contacts_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_popupwindow"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/img_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="12dp"
                android:background="@drawable/icon_menu_add_contacts" />

            <TextView
                android:id="@+id/tv_1"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/long_button_height"
                android:gravity="center_vertical"
                android:text="@string/add_contacts"
                android:textColor="@color/text_level_1"
                android:textSize="18dp" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/explore_line" >
        </View>

        <LinearLayout
            android:id="@+id/group_chat_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_popupwindow"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/img_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="12dp"
                android:background="@drawable/icon_menu_group_chat" />

            <TextView
                android:id="@+id/tv_2"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/long_button_height"
                android:gravity="center_vertical"
                android:text="@string/groupchat"
                android:textColor="@color/text_level_1"
                android:textSize="18dp" />
        </LinearLayout>

        <View
            android:id="@+id/pop_view_2"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/explore_line" >
        </View>

        <LinearLayout
            android:id="@+id/shakeshake_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_popupwindow"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/img_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="12dp"
                android:background="@drawable/icon_menu_shakeshake" />

            <TextView
                android:id="@+id/tv_3"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/long_button_height"
                android:gravity="center_vertical"
                android:text="@string/shake_shake"
                android:textColor="@color/text_level_1"
                android:textSize="18dp" />
        </LinearLayout>

        <View
            android:id="@+id/pop_view_3"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/explore_line" >
        </View>

        <LinearLayout
            android:id="@+id/qr_code_linear"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_popupwindow"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="12dp"
                android:background="@drawable/icon_menu_qr_code" />

            <TextView
                android:id="@+id/qr_code_text"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/long_button_height"
                android:gravity="center_vertical"
                android:text="@string/qrcode_reader"
                android:textColor="@color/text_level_1"
                android:textSize="18dp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>