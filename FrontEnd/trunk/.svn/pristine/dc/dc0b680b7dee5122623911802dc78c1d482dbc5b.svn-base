<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/SystemBarTint_Style"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_login_bg"
        android:orientation="vertical" >

        <include layout="@layout/head_back_title_more" />

        <LinearLayout
            android:id="@id/backup"
            android:layout_width="fill_parent"
            android:layout_height="87dp"
            android:background="@drawable/uilist"
            android:clickable="true"
            android:gravity="center_vertical"
            android:paddingTop="10dp" >

            <RelativeLayout
                android:id="@id/setting_my_profile_content_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dip"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@id/setting_my_profile_photo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/backup"
                    android:contentDescription="@string/empty" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/setting_my_profile_photo"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@id/setting_my_profile_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/back_up"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@id/setting_my_profile_sign"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/upload_phonebook"
                        android:textColor="@color/black" />
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.1dp"
                    android:layout_alignParentBottom="true"
                    android:layout_toRightOf="@+id/setting_my_profile_photo"
                    android:background="@drawable/dividingline_560" />
            </RelativeLayout>

            <ImageView
                android:id="@id/setting_arrow"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|right"
                android:layout_weight="15"
                android:contentDescription="@string/empty"
                android:src="@drawable/arrow"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:id="@id/recovery"
            android:layout_width="fill_parent"
            android:layout_height="87dp"
            android:background="@drawable/uilist"
            android:clickable="true"
            android:gravity="center_vertical" >

            <RelativeLayout
                android:id="@id/setting_my_profile_content_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dip"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@id/setting_my_profile_photo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/restore"
                    android:contentDescription="@string/empty" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/setting_my_profile_photo"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@id/setting_my_profile_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/recovery"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@id/setting_my_profile_sign"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/download_phonebook"
                        android:textColor="@color/black" />
                </LinearLayout>
            </RelativeLayout>

            <ImageView
                android:id="@id/setting_arrow"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|right"
                android:layout_weight="15"
                android:contentDescription="@string/empty"
                android:src="@drawable/arrow"
                android:visibility="gone" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.1dp"
            android:background="@drawable/dividingline_560" />
    </LinearLayout>

</LinearLayout>