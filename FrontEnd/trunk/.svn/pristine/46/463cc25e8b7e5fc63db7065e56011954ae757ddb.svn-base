<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <FrameLayout
        android:id="@+id/img_photo_frame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dip"
        android:layout_marginTop="10dip" >

        <ImageView
            android:id="@+id/invite_friend_setting_item_iamge"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/head_male2"
            android:contentDescription="@string/empty" />

        <ImageView
            android:id="@+id/editgroup_member_master"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:src="@drawable/groupowner_icon_big"
            android:visibility="gone" />

        <TextView
            android:id="@+id/gender_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|left"
            android:background="@drawable/icon_sexage_bg"
            android:drawableLeft="@drawable/icon_sexage_boy"
            android:gravity="right"
            android:paddingRight="2dip"
            android:visibility="gone" />
    </FrameLayout>

    <TextView
        android:id="@+id/invite_friend_setting_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_photo_frame"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:maxWidth="70dip"
        android:singleLine="true"
        android:textColor="#777777"
        android:text="dsdsd"
        android:textSize="14sp" >
    </TextView>

</RelativeLayout>