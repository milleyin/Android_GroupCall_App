<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/relativelayout_from_text"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:addStatesFromChildren="true"
        android:gravity="center_vertical"
        android:layout_toLeftOf="@+id/row_arrow"
        android:background="@color/white">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/message"
            android:layout_gravity="left"
            android:layout_marginLeft="18dp"/>
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/chatting_room_ater_me"
            android:textSize="15sp"
            android:layout_marginLeft="12dp"
            android:singleLine="true"
            android:text="fdasdfafdasfd"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:visibility="gone"
            />
        <TextView
            android:id="@+id/textview_top_colon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/chatting_room_ater_me"
            android:textSize="15sp"
            android:layout_marginLeft="2dp"
            android:singleLine="true"
            android:text="@string/colon"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:visibility="gone"
            />
        <com.afmobi.palmchat.ui.customview.MarqueeTextView
            android:id="@+id/msg"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/public_group_memeber_color"
            android:textSize="15sp"
            android:focusable="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:text="fdafafadfadffdafafafdadfafdadfsdf"
            android:gravity="center_vertical"
            />
    </LinearLayout>
